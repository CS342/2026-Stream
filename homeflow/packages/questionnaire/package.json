{
  "name": "@spezivibe/questionnaire",
  "version": "1.0.0",
  "description": "FHIR R4 compliant React Native questionnaire component library (storage-agnostic, following Spezi standard)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "EXAMPLES.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "react-native",
    "questionnaire",
    "survey",
    "form",
    "spezi"
  ],
  "author": "SpeziVibe",
  "license": "MIT",
  "dependencies": {
    "@blazejkustra/react-native-alert": "^1.0.0",
    "@types/fhir": "^0.0.41",
    "formik": "^2.4.9",
    "react-native-ui-datepicker": "^3.1.2",
    "yup": "^1.7.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-flow": "^7.27.1",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@react-native/babel-preset": "^0.81.5",
    "@react-native/metro-config": "^0.82.1",
    "@testing-library/react-native": "^12.9.0",
    "@types/fhir": "^0.0.41",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.1.17",
    "@types/react-native": "^0.73.0",
    "@types/react-test-renderer": "^18.0.7",
    "babel-jest": "^29.7.0",
    "formik": "^2.4.9",
    "jest": "^29.7.0",
    "react": "^19.1.0",
    "react-native": "^0.81.5",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2",
    "yup": "^1.7.1"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|@testing-library|@blazejkustra|react-native-ui-datepicker)/)"
    ],
    "moduleNameMapper": {
      "\\.(png|jpg|jpeg|gif|svg)$": "<rootDir>/src/__mocks__/fileMock.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts?(x)"
    ]
  }
}
