{
  "name": "@spezivibe/chat",
  "version": "1.0.0",
  "description": "Chat UI components for React Native with AI SDK integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "react-native",
    "chat",
    "ai",
    "openai",
    "anthropic",
    "google",
    "gemini",
    "claude",
    "spezi"
  ],
  "author": "SpeziVibe",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0",
    "@expo/vector-icons": ">=14.0.0",
    "ai": ">=4.0.0",
    "@ai-sdk/openai": ">=1.0.0",
    "@ai-sdk/anthropic": ">=1.0.0",
    "@ai-sdk/google": ">=1.0.0",
    "expo": ">=52.0.0"
  },
  "peerDependenciesMeta": {
    "@ai-sdk/openai": {
      "optional": true
    },
    "@ai-sdk/anthropic": {
      "optional": true
    },
    "@ai-sdk/google": {
      "optional": true
    }
  },
  "devDependencies": {
    "@ai-sdk/anthropic": "^1.0.0",
    "@ai-sdk/google": "^1.0.0",
    "@ai-sdk/openai": "^1.0.0",
    "@expo/vector-icons": "^15.0.3",
    "ai": "^4.0.0",
    "expo": "~54.0.30",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@react-native/babel-preset": "^0.81.5",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.1.17",
    "@types/react-test-renderer": "^18.0.7",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "react": "^19.1.0",
    "react-native": "^0.81.5",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2"
  },
  "jest": {
    "preset": "react-native",
    "testTimeout": 15000,
    "setupFiles": [
      "./jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@expo/vector-icons|expo|@testing-library)/)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts?(x)"
    ]
  }
}
